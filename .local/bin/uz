#!/bin/sh

set -e

[ -f "$1" ] || { echo "File not found: $1"; exit 1; }

# https://wiki.archlinux.org/title/Archiving_and_compression
case "$1" in
    *.7z)      7z x       "$1" ;;
    *.bz2)     bzip2 -d   "$1" ;;
    *.gz)      gzip  -d   "$1" ;;
    *.lz4)     lz4        "$1" ;;
    *.rar)     unrar      "$1" ;;
    *.tar.bz2) tar xvjf   "$1" ;;
    *.tar.gz)  tar xvzf   "$1" ;;
    *.tar)     tar xvf    "$1" ;;
    *.tbz2)    tar xvjf   "$1" ;;
    *.tgz)     tar xvzf   "$1" ;;
    *.wv)      wvunpack   "$1" ;;
    *.xz)      xz -d      "$1" ;;
    *.zip)     unzip      "$1" ;;
    *.zst)     zstd  -d   "$1" ;;
    *.Z)       uncompress "$1" ;;
    *) echo "'$1' unknown format"; exit 1 ;;
esac
